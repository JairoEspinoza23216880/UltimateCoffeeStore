<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: D6C0B3;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- Columna lateral -->
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="200.0" spacing="30.0" style="-fx-background-color: AB886D;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="100.0">
            <children>

                <!-- Botón "Menu" -->
                <Button fx:id="menuButton" onAction="#toMenu" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Menu" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Pedidos" -->
                <Button fx:id="orderButton" onAction="#toOrder" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Pedidos" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Ingredientes" -->
                <Button fx:id="ingredientButton" onAction="#toIngredient" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Ingredientes" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Ventas" -->
                <Button fx:id="saleButton" onAction="#toSale" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Ventas" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Clientes" -->
                <Button fx:id="customerButton" onAction="#toCustomer" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Clientes" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Mesas" -->
                <Button fx:id="tableButton" onAction="#toTable" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: grey;" text="Mesas" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <!-- Botón "Reportes" -->
                <Button prefHeight="40.0" onAction="#toReport" prefWidth="150.0" style="-fx-background-color: grey;" text="Reportes" textFill="#ffffff">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </VBox>

        <!-- Contenido principal -->
        <AnchorPane style="-fx-background-color: D6C0B3;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <!-- Barra superior -->
                <AnchorPane prefHeight="70.0" style="-fx-background-color: D6C0B3;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>

                        <!-- Título "Aquí va el Título" -->
                        <Label fx:id="titleLabel" layoutX="20.0" layoutY="20.0" text="Aquí va el Título" textFill="#434040">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>

                        <!-- Botón "Salir" -->
                        <Button fx:id="exitButton" onAction="#toBasic" layoutX="1100.0" layoutY="15.0" prefHeight="40.0" style="-fx-background-color: grey;" text="Salir" textFill="#ffffff" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="15.0">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Button>

                    </children>
                </AnchorPane>

                            <!-- Área principal -->
                <AnchorPane style="-fx-background-color: D6C0B3;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
                    <children>
                        
                        <!-- Espacio para la lista de HBox con Scroll -->
                        <ScrollPane fx:id="itemScroll" fitToWidth="true" hbarPolicy="NEVER" layoutX="131.0" layoutY="98.0" prefHeight="526.0" prefWidth="650.0" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="40.0">
                            <content>
                                <VBox spacing="10.0" style="-fx-background-color: white;">
                                    <!-- Aquí irían los HBox dinámicamente agregados -->
                                </VBox>
                            </content>
                        </ScrollPane>
    

                        <!-- Espacio para mostrar información -->
                        <VBox maxWidth="-Infinity" prefHeight="570.0" prefWidth="320.0" spacing="10.0" style="-fx-background-color: lightgrey;" AnchorPane.bottomAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="40.0">
                            <children>
                                <Label fx:id="infoTitleLabel" style="-fx-font-size: 24;" text="Detalles" textFill="#434040">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <!-- Espacio adicional para otros textos o elementos -->
                            </children>
                        </VBox>


                        <!-- Botón "Agregar" -->
                        <Button fx:id="addButton" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: grey;" text="Agregar" textFill="#ffffff" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Button>

                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>

        <!-- VBox que contiene solo el título "Classy Cafe" -->
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: AB886D;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <!-- Título "Classy Cafe" -->
                <Label fx:id="classyCafeTitle" alignment="CENTER" prefWidth="149.0" text="CLASSY CAFE" textAlignment="CENTER" textFill="#434040">
                    <font>
                        <Font name="System Bold Italic" size="24.0" />
                    </font>
                </Label>

            </children>
        </VBox>
    </children>
</AnchorPane>
